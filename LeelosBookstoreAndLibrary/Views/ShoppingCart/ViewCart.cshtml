@model IEnumerable<LeelosBookstoreAndLibrary.Models.ShoppingCartItem>

@{
    ViewBag.Title = "View Cart";
}

<h2>Your Shopping Cart</h2>

@if (!Model.Any()) // Check if the cart is empty
{
    <div class="alert alert-warning">
        <p>Your cart is empty.</p>
        @Html.ActionLink("Back to Home Page", "Index", "Home", null, new { @class = "btn btn-primary" })
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>
                        <input type="number" class="quantity-input" data-item-id="@item.Id" value="@item.Quantity" min="1" max="@item.Book.StockQuantity" />
                    </td>
                    <td class="item-price" data-item-id="@item.Id">@item.Price</td>
                    <td>
                        @Html.ActionLink("Remove", "RemoveFromCart", new { id = item.Id }) 
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <strong>Total Items: <span id="total-items">@Model.Sum(i => i.Quantity)</span></strong>
        <br />
        <strong>Total Price: <span id="total-price">@Model.Sum(i => i.Quantity * i.Price)</span></strong>
        <br />
        <a href="@Url.Action("Shipping", "Shipping")" class="btn btn-success">Proceed to Shipping</a>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Attach change event to quantity input
        $('.quantity-input').on('change', function() {
            var itemId = $(this).data('item-id'); // Get item ID
            var newQuantity = $(this).val(); // Get the new quantity

            // Send AJAX request to update the quantity
            $.ajax({
                url: '@Url.Action("UpdateItemQuantity", "ShoppingCart")',
                type: 'POST',
                data: {
                    id: itemId,
                    quantity: newQuantity
                },
                success: function(response) {
                    // Update the individual item price
                    $('.item-price[data-item-id="' + itemId + '"]').text(response.updatedPrice);

                    // Update the total price and total items
                    $('#total-items').text(response.totalItems);
                    $('#total-price').text(response.totalPrice);
                },
                error: function() {
                    alert("Error updating cart. Please try again.");
                }
            });
        });
    });
</script>
